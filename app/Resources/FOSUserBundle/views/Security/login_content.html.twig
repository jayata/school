{% extends 'base.html.twig' %}

 {% block body %}
     {% trans_default_domain 'FOSUserBundle' %}

     {% if error %}
         <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
     {% endif %}
     <h1> Bem-vindo ao Sistema de control escolar <span class="badge badge-secondary">Icara</span></h1>

     <form action="{{ path("fos_user_security_check") }}" method="post">
         {% if csrf_token %}
             <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
         {% endif %}

         <div class="form-group">
             <label for="exampleInputEmail1">Email address</label>
             <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" name="_username" value="{{ last_username }}">
             <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
         </div>
         <div class="form-group">
             <label for="exampleInputPassword1">Password</label>
             <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" id="password" name="_password" required="required">
         </div>
         <div class="form-check">
             <input type="checkbox" class="form-check-input" id="exampleCheck1">
             <label class="form-check-label" for="exampleCheck1">Check me out</label>
         </div>
         <input type="hidden" name="_target_path" value="/profile" />
         <button type="submit" class="btn btn-primary">Submit</button>
     </form>
 {% endblock %}