{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h3> Editar usuario</h3>
            <form action="{{ path('fos_user_profile_edit') }}" method="POST">
                {{ form_row(form._token) }}
                <div class="form-group row">
                    <label for="exampleInputEmail1" class="col-md-2">Nome<code class="highlighter-red">*</code></label>
                    {{ form_widget(form.name, { 'attr': {'class': 'form-control col-md-10', 'placeholder': 'Enter your name'|trans } }) }}
                    {{ form_errors(form.name) }}
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail1" class="col-md-2">CPF<code class="highlighter-red">*</code></label>
                    {{ form_widget(form.cpf, { 'attr': {'class': 'form-control col-md-10', 'placeholder': 'Enter a valid cpf'|trans } }) }}
                    {{ form_errors(form.cpf) }}
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail1" class="col-md-2">Telefone<code class="highlighter-red">*</code></label>
                    {{ form_widget(form.telefone, { 'attr': {'class': 'form-control col-md-10', 'placeholder': 'Enter a valid telefone'|trans } }) }}
                    {{ form_errors(form.telefone) }}
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail1" class="col-md-2">Data nascimento<code class="highlighter-red">*</code></label>
                    {{ form_widget(form.dataNascimento, { 'attr': {'class': 'form-control col-md-10' } }) }}
                    {{ form_errors(form.dataNascimento) }}
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail1" class="col-md-2">Usuario<code class="highlighter-red">*</code></label>
                    {{ form_widget(form.username, { 'attr': {'class': 'form-control col-md-10', 'placeholder': 'Enter a Username'|trans } }) }}
                    {{ form_errors(form.username) }}
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail1" class="col-md-2">Email<code class="highlighter-red">*</code></label>
                    {{ form_widget(form.email, { 'attr': {'class': 'form-control col-md-10', 'placeholder': 'Enter an Email'|trans } }) }}
                    {{ form_errors(form.email) }}
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                        else.
                    </small>
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail1" class="col-md-2">Current Password<code class="highlighter-red">*</code></label>
                    {{ form_widget(form.current_password, { 'attr': {'class': 'form-control col-md-10', 'placeholder': 'Enter the current Password'|trans } }) }}
                    {{ form_errors(form.current_password) }}
                </div>
                <div class="form-group row">
                    <input class="btn btn-lg btn-primary btn-block" type="submit" value="Savar cambios">
                </div>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>





