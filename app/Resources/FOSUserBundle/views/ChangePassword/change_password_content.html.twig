{% extends 'base.html.twig' %}
{% block body %}
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h3> Trocar senha</h3>
            <form action="{{ path('fos_user_change_password') }}" method="POST">
                {{ form_row(form._token) }}

                <div class="form-group row">
                    <label for="exampleInputEmail1" class="col-md-3">Senha atual<code
                                class="highlighter-red">*</code></label>
                    {{ form_widget(form.current_password, { 'attr': {'class': 'form-control col-md-9', 'placeholder': 'Sua senha atual'|trans } }) }}
                    {% if form_errors(form.current_password) %}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            {{ form_errors(form.current_password) }}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    {% endif %}
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail1" class="col-md-3">Nova senha<code
                                class="highlighter-red">*</code></label>
                    <input type="password" name="fos_user_change_password_form[plainPassword][first]" required class="form-control col-md-9" placeholder="A nova senha">
                    {% if form_errors(form.current_password) %}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            {{ form_errors(form.current_password) }}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    {% endif %}
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail1" class="col-md-3">Repita a senha<code
                                class="highlighter-red">*</code></label>
                    <input type="password" name="fos_user_change_password_form[plainPassword][second]" required class="form-control col-md-9" placeholder="Repita a nova senha">
                    {% if form_errors(form.current_password) %}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            {{ form_errors(form.current_password) }}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    {% endif %}
                </div>
                <div class="form-group row">
                    <input class="btn btn-lg btn-primary btn-block" type="submit" value="Trocar senha">
                </div>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>


{% endblock %}