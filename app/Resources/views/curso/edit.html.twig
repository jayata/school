{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">

            <a href="{{ path('curso_index') }}"><img src="{{ asset('svg/arrow-left.svg') }}"> Back to the list</a>
            <h1>Curso edit</h1>
            <form action="{{ path('curso_edit',{ 'id': curso.id}) }}" method="POST">
                {{ form_row(edit_form._token) }}
                    <div class="form-group row">
                        <label for="exampleInputEmail1" class="col-md-2">Nome<code class="highlighter-red">*</code></label>
                        {{ form_widget(edit_form.nome, { 'attr': {'class': 'form-control col-md-10', 'placeholder': 'Enter the name of the course'|trans } }) }}
                        {{ form_errors(edit_form.nome) }}
                    </div>
                <div class="form-group row">
                    <label for="exampleInputEmail1" class="col-sm-2">Mensualidade<code class="highlighter-red">*</code></label>
                    {{ form_widget(edit_form.mensualidade, { 'attr': {'class': 'form-control col-sm-10', 'placeholder': 'Enter the amount to pay monthly'|trans } }) }}
                    {{ form_errors(edit_form.mensualidade) }}
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail1" class="col-sm-2">Valor da matricula<code class="highlighter-red">*</code></label>
                    {{ form_widget(edit_form.valorMatricula, { 'attr': {'class': 'form-control col-sm-10', 'placeholder': 'Enter the amount to pay to enroll this course'|trans } }) }}
                    {{ form_errors(edit_form.valorMatricula) }}
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail1" class="col-sm-2">Periodo<code class="highlighter-red">*</code></label>
                    {{ form_widget(edit_form.periodo, { 'attr': {'class': 'form-control col-sm-10', 'placeholder': 'Enter the amount to pay to enroll this course'|trans } }) }}
                    {{ form_errors(edit_form.periodo) }}
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail1" class="col-sm-2">Duracao (meses)<code class="highlighter-red">*</code></label>
                    {{ form_widget(edit_form.mesesDuracao, { 'attr': {'class': 'form-control col-sm-10', 'placeholder': 'How many months does this course last?'|trans } }) }}
                    {{ form_errors(edit_form.mesesDuracao) }}
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail1" class="col-sm-2">Descripcao<code class="highlighter-red">*</code></label>
                    {{ form_widget(edit_form.descripcao, { 'attr': {'class': 'form-control col-sm-10', 'placeholder': 'Enter the descripcao of the course'|trans } }) }}
                    {{ form_errors(edit_form.descripcao) }}
                </div>
                {#</div>#}
                <div class="form-group row">
                    <input class="btn btn-lg btn-primary btn-block" type="submit" value="Editar curso">
                </div>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
{% endblock %}
