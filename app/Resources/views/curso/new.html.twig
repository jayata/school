{% extends 'base.html.twig' %}
{% block title %}Adicionar curso{% endblock %}
{% block body %}

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">

            <a href="{{ path('curso_index') }}"><img src="{{ asset('svg/arrow-left.svg') }}"> Volta à listagem</a><h3>Criar novo curso</h3>
            <form action="{{ path('curso_new') }}" method="POST">
                {{ form_row(form._token) }}
                <div class="form-group row">
                    <label for="exampleInputEmail1" class="col-md-3">Nome<code class="highlighter-red">*</code></label>
                    {{ form_widget(form.nome, { 'attr': {'class': 'form-control col-md-9', 'placeholder': 'Digite o nome do curso'|trans } }) }}
                    <small id="emailHelp" class="form-text text-muted hidden-xs hidden-sm">
                        Escolha um nome para o curso que é representativo e exclusivo.
                    </small>
                    {% if form_errors(form.nome)  %}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            {{ form_errors(form.nome)}}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    {% endif %}
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail1" class="col-md-3">Mensalidade<code class="highlighter-red">*</code></label>
                    {{ form_widget(form.mensualidade, { 'attr': {'class': 'form-control col-md-9', 'placeholder': 'Digite o valor da mensalidade'|trans } }) }}
                    {% if form_errors(form.mensualidade)  %}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            {{ form_errors(form.mensualidade) }}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    {% endif %}
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail1" class="col-md-3">Valor da matrícula<code class="highlighter-red">*</code></label>
                    {{ form_widget(form.valorMatricula, { 'attr': {'class': 'form-control col-md-9', 'placeholder': 'Digite o valor da taxa de inscrição'|trans } }) }}
                    {% if form_errors(form.valorMatricula)  %}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            {{ form_errors(form.valorMatricula) }}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    {% endif %}
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail1" class="col-md-3">Período<code class="highlighter-red">*</code></label>
                    {{ form_widget(form.periodo, { 'attr': {'class': 'form-control col-md-9 custom-select', 'placeholder': ''|trans } }) }}
                    {% if form_errors(form.periodo)  %}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            {{ form_errors(form.periodo) }}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    {% endif %}
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail1" class="col-md-3">Duração (meses)<code class="highlighter-red">*</code></label>
                    {{ form_widget(form.mesesDuracao, { 'attr': {'class': 'form-control col-md-9', 'placeholder': 'Quantos meses dura este curso?'|trans } }) }}
                    {% if form_errors(form.mesesDuracao)  %}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            {{ form_errors(form.mesesDuracao) }}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    {% endif %}
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail1" class="col-md-3">Descrição<code class="highlighter-red">*</code></label>
                    {{ form_widget(form.descripcao, { 'attr': {'class': 'form-control col-md-9', 'placeholder': 'Digite uma descrição'|trans } }) }}
                    {% if form_errors(form.descripcao)  %}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            {{ form_errors(form.descripcao) }}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    {% endif %}
                </div>
                <div class="form-group row">
                    <input class="btn btn-lg btn-primary btn-block" type="submit" value="Criar curso">
                </div>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>

{% endblock %}
