{% extends 'base.html.twig' %}
{% block title %}Abrir matricula{% endblock %}
     {% block stylesheets %}
         <link rel="stylesheet" href="{{ asset('css/bootstrap-datepicker.min.css') }}">
     {% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <a href="{{ path('matricula_index') }}"><img src="{{ asset('svg/arrow-left.svg') }}"> Voltar à listagem</a>
            <h3>Criar matrícula</h3>
            <form action="{{ path('matricula_new') }}" method="POST">
                {{ form_row(form._token) }}
                <div class="form-group row">
                    <label for="exampleInputEmail1" class="col-md-3">Ano leitivo<code class="highlighter-red">*</code></label>
                    {{ form_widget(form.ano, { 'attr': {'class': 'form-control col-md-9', 'placeholder': 'Enter the ano'|trans } }) }}
                    {% if form_errors(form.ano)  %}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            {{ form_errors(form.ano) }}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    {% endif %}
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail1" class="col-md-3">Curso<code class="highlighter-red">*</code></label>
                    {{ form_widget(form.curso, { 'attr': {'class': 'form-control col-md-9', 'placeholder': 'Enter the amount to pay monthly'|trans } }) }}
                    {% if form_errors(form.curso)  %}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            {{ form_errors(form.curso) }}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    {% endif %}
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail1" class="col-md-3">Ativa</label>
                    {{ form_widget(form.ativa, { 'attr': {'class': 'form-control col-sm-1', 'placeholder': 'Enter the amount to pay to enroll this course'|trans } }) }}
                    {% if form_errors(form.ativa)   %}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            {{ form_errors(form.ativa)  }}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    {% endif %}
                </div>

                <div class="form-group row">
                    <input class="btn btn-lg btn-primary btn-block" type="submit" value="Criar matrícula">
                </div>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/bootstrap-datepicker.min.js') }}"></script>
{% endblock %}