{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-3">
            <div class="card " style="width: 18rem;">
                <div class="card-header">
                    <a href="{{ path('matricula_index') }}"><img
                                src="{{ asset('svg/arrow-left.svg') }}"> Back to the list</a>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><a href="{{ path('matricula_edit', { 'id': matricula.id }) }}"><img
                                    src="{{ asset('svg/pencil.svg') }}"> Edit</a></li>
                    <li class="list-group-item"><a href="{{ path('matricular_form',{'id': matricula.id}) }}"><img
                                    src="{{ asset('svg/book.svg') }}"> Matricular aluno neste curso</a></li>
                    <li class="list-group-item">
                        <a href="#" data-toggle="modal" data-target="#exampleModalCenter" class="text-danger"><img
                                    src="{{ asset('svg/trashcan.svg') }}"> Delete</a>
                    </li>
                </ul>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
             aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Confirmar accion</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        Esta seguro que desea eliminar esta matricula?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                        {{ form_start(delete_form) }}
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                        {{ form_end(delete_form) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card text-left">
                <div class="card-header">
                    <h3>Detalles da matricula {{ matricula.id }}</h3>
                </div>
                <div class="card-body">
                    <h5 class="card-title"><b>Curso:</b> {{ matricula.curso }}</h5>
                    <h6 class="card-title"><b>Ano:</b> {{ matricula.ano }}</h6>
                    <h6 class="card-title"><b>Ativa:</b> {% if matricula.ativa %}Sim{% else %}Nao{% endif %}</h6>
                    {% if matricula.alunosMatriculados | length > 0 %}
                        <h6 class="card-title"><b>Listagem de alunos:</b></h6>
                        <ul>
                        {% for aluno in  matricula.alunosMatriculados %}
                            <li>{{ aluno.aluno.name }}</li>
                    {% endfor %}
                        </ul>
                    {% else %}No hay alunos matriculados aun{% endif %}
                </div>
                <div class="card-footer text-muted">
                    xxxx
                </div>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
{% endblock %}
