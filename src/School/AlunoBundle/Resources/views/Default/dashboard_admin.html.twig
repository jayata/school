{% extends 'base.html.twig' %}
{% block title %}Dashboard{% endblock %}
{% block body %}
    <h6><b>Total de cursos:</b> {{ cursos | length }}</h6>
    {% if percentage %}
        <h6>{{ percentage }}% dos cursos têm inscrições abertas agora
            <small>&nbsp; | &nbsp;<a href="{{ path('matricula_index') }}">Ver matriculas</a></small>
        </h6>
        <div class="progress" style="height: 35px;">
            <div class="progress-bar" role="progressbar" style="width: {{ percentage }}%;"
                 aria-valuenow="{{ percentage }}"
                 aria-valuemin="0" aria-valuemax="100"><strong>{{ percentage }}%</strong>
            </div>
        </div>
    {% else %}
        <h6><a href="{{ path('curso_new') }}"><img src="{{ asset('svg/plus.svg') }}">Criar curso</a></h6>
    {% endif %}
    <br>
    <hr>
    <h6><b>Total de inscrições feitas:</b> {{ matriculasAlunos | length }}</h6>
    {% if percentagePaga or percentagePaga== 0 %}
        <h6>{{ percentagePaga }}% das inscrições estão pagas agora </h6>
        <div class="progress" style="height: 35px;">
            <div class="progress-bar" role="progressbar" style="width: {{ percentagePaga }}%;"
                 aria-valuenow="{{ percentagePaga }}"
                 aria-valuemin="0" aria-valuemax="100"><strong>{{ percentagePaga }}%</strong>
            </div>
        </div>
    {% else %}
        <h6><a href="{{ path('matricular_form',{'id':-1}) }}"><img src="{{ asset('svg/plus.svg') }}">Matricular
                aluno</a></h6>
    {% endif %}
    <br>
    <hr>

    <div class="row">
        <div class="col-md-3 mx-auto">
            <div class="card text-white bg-info mb-3" style="max-width: 18rem;">
                <div class="card-header">Gerenciar alunos</div>
                <div class="card-body text-info">
                    <ul class="list-group">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <a href="{{ path('admin_user_registration') }}"><img src="{{ asset('svg/plus.svg') }}">
                            Adicionar aluno</a>
                            <span class="badge badge-primary badge-pill">Total {{ alunos | length }}</span>
                        </li>
                         <li class="list-group-item d-flex justify-content-between align-items-center">
                            <a href="{{ path('admin_user_list') }}"><img src="{{ asset('svg/plus.svg') }}">
                            Ver listagem</a>
                            <span class="badge badge-primary badge-pill"></span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-3 mx-auto">
            <div class="card text-white bg-info mb-3" style="max-width: 18rem;">
                <div class="card-header">Gerenciar cursos</div>
                <div class="card-body text-info">
                    <ul class="list-group">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <a href="{{ path('curso_new') }}"><img src="{{ asset('svg/plus.svg') }}">
                                Adicionar curso</a>
                            <span class="badge badge-primary badge-pill">Total {{ cursos | length }}</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <a href="{{ path('curso_index') }}"><img src="{{ asset('svg/plus.svg') }}">
                                Ver listagem</a>
                            <span class="badge badge-primary badge-pill"></span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-3 mx-auto">
            <div class="card text-white bg-info mb-3" style="max-width: 18rem;">
                <div class="card-header">Gerenciar matrículas</div>
                <div class="card-body text-info">
                    <ul class="list-group">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <a href="{{ path('matricular_form',{'id': -1}) }}"><img src="{{ asset('svg/plus.svg') }}">
                                Matricular aluno</a>
                            <span class="badge badge-primary badge-pill">Total {{ matriculasAlunos | length }}</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <a href="{{ path('matricula_index') }}"><img src="{{ asset('svg/plus.svg') }}">
                                Ver listagem</a>
                            <span class="badge badge-primary badge-pill"></span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <a href="{{ path('matricula_new') }}"><img src="{{ asset('svg/plus.svg') }}">
                                Abrir nova matrícula</a>
                            <span class="badge badge-primary badge-pill"></span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

    </div>
{% endblock %}