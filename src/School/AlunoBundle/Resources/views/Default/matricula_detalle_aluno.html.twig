{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-3">
            <div class="card" style="width: 18rem;">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><a href="{{ path('dashboard_aluno') }}"><img
                                    src="{{ asset('svg/arrow-left.svg') }}"> Back to the list</a></li>
                    <li class="list-group-item">
                        <a href="#" data-toggle="modal" data-target="#exampleModalCenter" class="text-danger"><img
                                    src="{{ asset('svg/x.svg') }}"> Desmatricular</a>
                    </li>
                </ul>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
             aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Confirmar accion</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        Esta seguro que desea desmatricular?
                        Lembrese que É cobrado 1% por mês não cumprido del curso.
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                        <a href="{{ path('marticula_cancelar', {'id': matricula.id}) }}" type="submit" class="btn btn-danger">Desmatricular</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Detalles da matricula</h3>
                </div>
                <div class="card-body">
                    <h5 class="card-title"><b>Curso:</b> {{ matricula.matricula.curso }}</h5>
                    <h6 class="card-title"><b>Ano:</b> {{ matricula.matricula.ano }}</h6>
                    <h6 class="card-title"><b>Periodo:</b> {{ matricula.matricula.curso.periodo}}</h6>
                    <h6 class="card-title"><b>Duracao:</b> {{  matricula.matricula.curso.mesesDuracao }}</h6>
                    <h6 class="card-title"><b>Cantidade de alunos matriculados:</b> {{ matricula.matricula.alunosMatriculados | length }}</h6>
                    <h6 class="card-title"><b>Descripcion:</b> {{ matricula.matricula.curso.descripcao }}</h6>
                    <h6 class="card-title"><b>Mensualidade:</b> {{ matricula.matricula.curso.mensualidade }}</h6>
                    <h6 class="card-title"><b>Valor da matricula:</b> {{ matricula.matricula.curso.valorMatricula }}</h6>
                </div>
                <div class="card-footer text-muted">
                    {% if matricula.paga %}Pagado
                    {% else %}
                        Ainda nao pago <a type="button" class="btn btn-primary">Pagar <img src="{{ asset('svg/arrow-right.svg') }}"></a>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
{% endblock %}
