{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <a href="{{ path('curso_index') }}">
                <img src="{{ asset('svg/arrow-left.svg') }}"> Back to the list</a>
            <h3>Matricular aluno en el curso {{ matricula.curso }}</h3>
            <form action="{{ path('matricular_admin_action') }}" method="POST">
                <div class="form-group row">
                    <label for="exampleInputEmail1" class="col-md-2">Aluno<code class="highlighter-red">*</code></label>
                    <div class="col-sm-10">
                        <select class="custom-select mr-sm-2" id="inlineFormCustomSelect" name="aluno" required>
                            <option value="">Choose...</option>
                            {% for aluno in alunos %}
                                <option value="{{ aluno.id }}">{{ aluno.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail1" class="col-md-2">Curso<code class="highlighter-red">*</code></label>
                    <div class="col-sm-10">
                        <select class="custom-select mr-sm-2" id="inlineFormCustomSelect" name="matricula" disabled>
                                <option value="{{ matricula.id }}">{{ matricula.curso }}</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <input class="btn btn-lg btn-primary btn-block" type="submit" value="Matricular">
                </div>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>

{% endblock %}
